<UserControl x:Class="Ocelot.Views.Panels.EventMapJumpPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource TabContainerStyle}">
            <StackPanel Orientation="Horizontal">
                <Border x:Name="PropertiesTab" Style="{StaticResource TabItemStyle}" MouseLeftButtonDown="TabClick">
                    <TextBlock Text="Properties" Style="{StaticResource TabTextStyle}" />
                </Border>

                <Border x:Name="DefinitionTab" Style="{StaticResource TabItemStyle}" MouseLeftButtonDown="TabClick">
                    <TextBlock Text="Definition" Style="{StaticResource TabTextStyle}" />
                </Border>
            </StackPanel>
        </Border>

        <ScrollViewer x:Name="PropertiesContent" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <GroupBox Header="Basic Information" Style="{StaticResource ImaginationGroupBox}">
                    <StackPanel>
                        <TextBox x:Name="PtreeTypeTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Ptree Type"
                                 IsReadOnly="True"
                                 Margin="0,5,0,5" />

                        <TextBox x:Name="EventNameTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Event Name"
                                 Margin="0,5,0,5" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Position" Style="{StaticResource ImaginationGroupBox}">
                    <StackPanel>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     x:Name="PositionXTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Position X"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />

                            <TextBox Grid.Column="2"
                                     x:Name="PositionYTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Position Y"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />
                        </Grid>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     x:Name="PositionZTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Position Z"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />

                            <StackPanel Grid.Column="2">
                                <CheckBox x:Name="PositionWCheckBox" Content="Has W" Margin="0,0,0,5" 
                                          Checked="PositionWCheckBox_Changed" Unchecked="PositionWCheckBox_Changed"/>
                                <TextBox x:Name="PositionWTextBox" 
                                         Style="{StaticResource ImaginationLabeledTextBox}"
                                         Tag="Position W"
                                         PreviewTextInput="FloatTextBox_PreviewTextInput" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Area" Style="{StaticResource ImaginationGroupBox}">
                    <StackPanel>
                        <TextBlock Text="Area Type" Margin="0,0,0,2" Foreground="{DynamicResource Theme.Text.PrimaryBrush}" />
                        <ComboBox x:Name="AreaTypeComboBox" Style="{StaticResource ModernComboBoxStyle}" SelectionChanged="AreaTypeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Box" />
                            <ComboBoxItem Content="Circle" />
                        </ComboBox>

                        <StackPanel x:Name="BoxLimiterPanel" Margin="0,10,0,0" Visibility="Collapsed">
                            <Grid Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         x:Name="WidthTextBox" 
                                         Style="{StaticResource ImaginationLabeledTextBox}"
                                         Tag="Width"
                                         PreviewTextInput="FloatTextBox_PreviewTextInput" />

                                <TextBox Grid.Column="2"
                                         x:Name="HeightTextBox" 
                                         Style="{StaticResource ImaginationLabeledTextBox}"
                                         Tag="Height"
                                         PreviewTextInput="FloatTextBox_PreviewTextInput" />
                            </Grid>

                            <TextBox x:Name="BoxAngleTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Angle"
                                     Margin="0,5,0,5"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />
                        </StackPanel>

                        <StackPanel x:Name="CircleLimiterPanel" Margin="0,10,0,0" Visibility="Collapsed">
                            <Grid Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         x:Name="RadiusTextBox" 
                                         Style="{StaticResource ImaginationLabeledTextBox}"
                                         Tag="Radius"
                                         PreviewTextInput="FloatTextBox_PreviewTextInput" />

                                <TextBox Grid.Column="2"
                                         x:Name="CircleAngleTextBox" 
                                         Style="{StaticResource ImaginationLabeledTextBox}"
                                         Tag="Angle"
                                         PreviewTextInput="FloatTextBox_PreviewTextInput" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer x:Name="DefinitionContent" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
            <StackPanel Margin="10">
                <GroupBox Header="Conditions" Style="{StaticResource ImaginationGroupBox}">
                    <StackPanel>
                        <StackPanel x:Name="TBoxBitCheckPanel" Margin="0,5,0,5">
                            <CheckBox x:Name="TBoxBitCheckCheckBox" Content="TBox Bit Check" Margin="0,0,0,5" 
                                      Checked="TBoxBitCheckCheckBox_Changed" Unchecked="TBoxBitCheckCheckBox_Changed"/>
                            <TextBox x:Name="TBoxBitCheckTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="TBox Bit Check Value"
                                     PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel x:Name="BtnCheckPanel" Margin="0,5,0,5">
                            <CheckBox x:Name="BtnCheckCheckBox" Content="Button Check" Margin="0,0,0,5" 
                                      Checked="BtnCheckCheckBox_Changed" Unchecked="BtnCheckCheckBox_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Jump To Properties" Style="{StaticResource ImaginationGroupBox}">
                    <StackPanel>
                        <TextBox x:Name="JumpToMapIDTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Map ID"
                                 Margin="0,5,0,5" />

                        <StackPanel x:Name="MoveRotPanel" Margin="0,5,0,5">
                            <CheckBox x:Name="MoveRotCheckBox" Content="Move Rotation" Margin="0,0,0,5" 
                                      Checked="MoveRotCheckBox_Changed" Unchecked="MoveRotCheckBox_Changed"/>
                            <TextBox x:Name="MoveRotTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Move Rotation Value"
                                     PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel x:Name="MapMotionPanel" Margin="0,5,0,5">
                            <CheckBox x:Name="MapMotionCheckBox" Content="Map Motion" Margin="0,0,0,5" 
                                      Checked="MapMotionCheckBox_Changed" Unchecked="MapMotionCheckBox_Changed"/>
                            <TextBox x:Name="MapMotionTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Map Motion Value"/>
                        </StackPanel>

                        <StackPanel x:Name="FadeFramePanel" Margin="0,5,0,5">
                            <CheckBox x:Name="FadeFrameCheckBox" Content="Fade Frame" Margin="0,0,0,5" 
                                      Checked="FadeFrameCheckBox_Changed" Unchecked="FadeFrameCheckBox_Changed"/>
                            <TextBox x:Name="FadeFrameTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="Fade Frame Value"
                                     PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel x:Name="JumpToSeNamePanel" Margin="0,5,0,5">
                            <CheckBox x:Name="JumpToSeNameCheckBox" Content="SE Name" Margin="0,0,0,5" 
                                      Checked="JumpToSeNameCheckBox_Changed" Unchecked="JumpToSeNameCheckBox_Changed"/>
                            <TextBox x:Name="JumpToSeNameTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="SE Name Value"/>
                        </StackPanel>

                        <StackPanel x:Name="SeFramePanel" Margin="0,5,0,5">
                            <CheckBox x:Name="SeFrameCheckBox" Content="SE Frame" Margin="0,0,0,5" 
                                      Checked="SeFrameCheckBox_Changed" Unchecked="SeFrameCheckBox_Changed"/>
                            <TextBox x:Name="SeFrameTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="SE Frame Value"
                                     PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="STD Position" Style="{StaticResource ImaginationGroupBox}">
                    <StackPanel>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     x:Name="STDPosXTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="STD Pos X"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />

                            <TextBox Grid.Column="2"
                                     x:Name="STDPosYTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="STD Pos Y"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />
                        </Grid>

                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     x:Name="STDPosZTextBox" 
                                     Style="{StaticResource ImaginationLabeledTextBox}"
                                     Tag="STD Pos Z"
                                     PreviewTextInput="FloatTextBox_PreviewTextInput" />

                            <StackPanel Grid.Column="2">
                                <CheckBox x:Name="STDPosWCheckBox" Content="Has W" Margin="0,0,0,5" 
                                          Checked="STDPosWCheckBox_Changed" Unchecked="STDPosWCheckBox_Changed"/>
                                <TextBox x:Name="STDPosWTextBox" 
                                         Style="{StaticResource ImaginationLabeledTextBox}"
                                         Tag="STD Pos W"
                                         PreviewTextInput="FloatTextBox_PreviewTextInput" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>