<UserControl x:Class="Ocelot.Views.Panels.TreasureBoxPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <GroupBox Header="Basic Information" Style="{StaticResource ImaginationGroupBox}">
                <StackPanel>
                    <TextBox x:Name="IDTextBox" 
                             Style="{StaticResource ImaginationLabeledTextBox}"
                             Tag="ID (Hex)"
                             Margin="0,5,0,5"
                             PreviewTextInput="HexTextBox_PreviewTextInput" />

                    <TextBlock Text="Type" Margin="0,0,0,2" Foreground="{DynamicResource Theme.Text.PrimaryBrush}" />
                    <ComboBox x:Name="TypeComboBox" 
                              Style="{StaticResource ModernComboBoxStyle}" 
                              SelectionChanged="TypeComboBox_SelectionChanged" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Position" Style="{StaticResource ImaginationGroupBox}">
                <StackPanel>
                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 x:Name="LocationXTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Location X"
                                 PreviewTextInput="FloatTextBox_PreviewTextInput" />
                        <TextBox Grid.Column="2"
                                 x:Name="LocationYTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Location Y"
                                 PreviewTextInput="FloatTextBox_PreviewTextInput" />
                    </Grid>
                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 x:Name="LocationZTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Location Z"
                                 PreviewTextInput="FloatTextBox_PreviewTextInput" />
                        <TextBox Grid.Column="2"
                                 x:Name="RotationTextBox" 
                                 Style="{StaticResource ImaginationLabeledTextBox}"
                                 Tag="Rotation"
                                 PreviewTextInput="FloatTextBox_PreviewTextInput" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Items" Style="{StaticResource ImaginationGroupBox}">
                <StackPanel>
                    <TextBox x:Name="TBoxFlagTextBox" 
                             Style="{StaticResource ImaginationLabeledTextBox}"
                             Tag="TBox Flag"
                             Margin="0,5,0,5"
                             PreviewTextInput="NumericTextBox_PreviewTextInput" />

                    <TextBlock Text="Mode" Margin="0,0,0,2" Foreground="{DynamicResource Theme.Text.PrimaryBrush}" />
                    <ComboBox x:Name="ModeComboBox" 
                              Style="{StaticResource ModernComboBoxStyle}" 
                              SelectionChanged="ModeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Normal" Tag="Normal" />
                        <ComboBoxItem Content="Exclusive" Tag="Exclusive" />
                    </ComboBox>

                    <StackPanel x:Name="ItemsContainer" Margin="0,10,0,0">
                        <!-- Dynamic Items Container -->
                        <!-- Items will be dynamically added here -->
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>